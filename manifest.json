{
	"manifest_version": 2,
	"name": "huoban mind",
	"version": "0.0.1",
	"background": { "scripts": ["utils/jquery-2.0.0.min.js", "src/background.js"] },
	"page_action": {
		"default_icon": {
			"19": "assets/images/icon19.png",
			"38": "assets/images/icon38.png"
		},
		"default_title": "伙伴网的脑图插件"
	},
	"permissions" : ["tabs"],
	"content_scripts":[{
		"matches":["https://app.huoban.com/*", "https://api.huoban.com/*"],
		"js":[
			"utils/jquery-2.0.0.min.js",
			"src/content_script.js",
			"utils/d3.v3.min.js",
			"lib/main.js",
			"lib/popup.js"
		],
		"run_at":"document_end"
	}]
}
